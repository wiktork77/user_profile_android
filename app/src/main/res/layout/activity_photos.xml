<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotosActivity">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tr1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/avatarOpt1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf1" />

            <ImageView
                android:id="@+id/avatarOpt2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf2" />

            <ImageView
                android:id="@+id/avatarOpt3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf3" />

        </TableRow>

        <TableRow
            android:id="@+id/tr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/avatarOpt4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/image" />

            <ImageView
                android:id="@+id/avatarOpt5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf4" />

            <ImageView
                android:id="@+id/avatarOpt6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf5" />
        </TableRow>

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/avatarOpt7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf6" />

            <ImageView
                android:id="@+id/avatarOpt8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf7" />

            <ImageView
                android:id="@+id/avatarOpt9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/tf8" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:text="@string/avatars_info"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>